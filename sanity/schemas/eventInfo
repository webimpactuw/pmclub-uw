export default {
    title: 'Event Info',
    name: 'eventInfo',
    type: 'document',
    fields: [
    {
      title: 'Event Name',
      name: 'eventName',
      type: 'string',
      validation: Rule => Rule.required()
    },
    {
      title: 'Short description',
      name: 'desc',
      type: 'text',
      options: {
        maxLength: 250,
      },
      validation: Rule => Rule.required()
    },
    {
      name: "dayAndDates",
      title: "Date and Day",
      type: "array",
      of: [{type: 'dayAndDate'}],
      validation: (Rule) => Rule.required(),
    },
    {
      name: "eventDuration",
      title: "Event Times",
      type: "array",
      of: [{type: 'duration'}],
      validation: (Rule) => Rule.required(),
    },
    {
      name: "location",
      title: "Location",
      type: 'string',
      validation: (Rule) => Rule.required(),
    },
    {
      name: "featured",
      title: "Featuring (guest speakers or notable attendees)",
      type: "array",
      of: [{type: 'speaker'}],
    },
    {
      title: "Event Image or Flyer",
      name: "image",
      type: "image",
      options: {
        hotspot: true,
      },
    },
    {
      name: "socialMediaLink",
      title: "Link to Social Media Post",
      type: "url"
    },
    {
      title: "Slug",
      name: "slug",
      type: "slug",
      options: {
        source: "socialMediaLink",
        maxLength: 96,
      },
    },
    ]
  }